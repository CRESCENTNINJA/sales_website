<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Login</title>
  <style>
    /* Layout & Colours */
    body{
      margin:0;display:flex;align-items:center;justify-content:center;
      min-height:100vh;font:16px 'Segoe UI',system-ui,sans-serif;
      background:#f3f4f6;color:#333;
    }
    .card{
      background:#fff;padding:2rem;border-radius:12px;max-width:400px;width:100%;
      box-shadow:0 2px 8px rgba(0,0,0,.1);transition:transform .2s;
    }
    .card:hover{transform:translateY(-2px)}
    h1{margin:0 0 1rem;text-align:center;font-size:1.5rem;color:#25D366}
    .logo{display:block;margin:0 auto 1rem;width:60px;height:60px}

    /* Form */
    .form-group{margin-bottom:1rem}
    label{display:block;margin-bottom:.25rem;font-size:.9rem}
    input{
      width:100%;padding:.75rem;font-size:1rem;border:1px solid #ccc;border-radius:10px;
      transition:border-color .2s,box-shadow .2s
    }
    input:focus{
      outline:none;border-color:#25D366;
      box-shadow:0 0 0 2px rgba(37,211,102,.2)
    }
    .hint{font-size:.8rem;color:#666;margin-top:.25rem}

    /* Button */
    .submit-btn{
      width:100%;padding:.75rem;font-size:1rem;border:none;border-radius:10px;
      background:#25D366;color:#fff;cursor:pointer;transition:background .2s
    }
    .submit-btn:hover{background:#1ebe5c}

    /* Footer */
    .footer{margin-top:1.5rem;font-size:.8rem;text-align:center;color:#777}
    .footer a{color:#25D366;text-decoration:none}
  </style>
</head>
<body>
  <div class="card" role="main" aria-labelledby="loginTitle">
    <img src="logo.png" alt="App Logo" class="logo">
    <h1 id="loginTitle">MyAdmin Panel</h1>

    <!-- LOGIN FORM -->
    <form id="loginForm" action="/admin/login" method="post" novalidate>
      <div class="form-group">
        <label for="mobile">Mobile Number</label>
        <input
          type="tel" id="mobile" name="mobile"
          placeholder="Enter your mobile" inputmode="numeric" pattern="[0-9]{10}" required
        />
        <div class="hint">10-digit number, no spaces</div>
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input
          type="password" id="password" name="password"
          placeholder="Enter your password" required
        />
      </div>

      <button class="submit-btn">Log In</button>
    </form>

    <div class="footer">
      <div>Your Location: Bangalore, India</div>
      <div><a href="mailto:support@example.com">support@example.com</a></div>
    </div>
  </div>

  <script>
    // Simple client-side validation feedback
    document.getElementById('loginForm').addEventListener('submit', e=>{
      if(!e.target.checkValidity()){
        e.preventDefault();
        e.target.reportValidity();
      }
    });
  </script>
</body>
</html>
