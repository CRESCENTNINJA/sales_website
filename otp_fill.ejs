<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Verify OTP ‚Äì MySimpleApp</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: #f3f4f6;
      margin: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 40px 20px;
      min-height: 100vh;
    }
    .logo {
      margin-top: 30px;
      text-align: center;
    }
    .logo img {
      width: 70px;
    }
    .logo h1 {
      font-size: 1.6em;
      margin: 10px 0 0;
      color: #333;
    }
    .container {
      background: white;
      padding: 30px 25px;
      border-radius: 12px;
      max-width: 400px;
      width: 100%;
      margin-top: 25px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
      text-align: center;
    }
    h2 {
      color: #222;
      margin-bottom: 20px;
    }
    form {
      display: flex;
      justify-content: center;
      gap: 15px;
      margin-bottom: 25px;
    }
    input[type="text"] {
      width: 50px;
      height: 60px;
      font-size: 32px;
      text-align: center;
      border-radius: 10px;
      border: 1.5px solid #ccc;
      outline: none;
      transition: border-color 0.2s ease-in-out;
    }
    input[type="text"]:focus {
      border-color: #25D366;
      box-shadow: 0 0 8px #25D366;
    }
    button {
      background-color: #25D366;
      color: white;
      border: none;
      width: 100%;
      padding: 14px;
      font-size: 16px;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.2s ease-in-out;
    }
    button:hover {
      background-color: #1cb857;
    }
    .info {
      font-size: 14px;
      color: #666;
      margin-bottom: 20px;
    }
    .footer {
      margin-top: 40px;
      font-size: 13px;
      color: #777;
      text-align: center;
      padding-bottom: 20px;
    }
    @media (max-width: 500px) {
      input[type="text"] {
        width: 45px;
        height: 55px;
        font-size: 28px;
      }
      .container {
        padding: 25px 20px;
      }
      h2 {
        font-size: 1.3em;
      }
    }
  </style>
</head>
<body>

  <div class="logo">
    <img src="logo.png" alt="Logo" />
    <h1>MySimpleApp</h1>
  </div>

  <div class="container">
    <h2>Enter the 4-digit OTP</h2>
    <h3><%= data.phone.slice(0,6)%>XXXX</h3>
    <div class="info">Check WhatsApp for the OTP and enter below</div>
    <form id="otp-form" action="name.html" method="POST" onsubmit="return validateOtp()">
      <input type="text" inputmode="numeric" pattern="[0-9]*" maxlength="1" name="otp1" required autocomplete="one-time-code" />
      <input type="text" inputmode="numeric" pattern="[0-9]*" maxlength="1" name="otp2" required autocomplete="one-time-code" />
      <input type="text" inputmode="numeric" pattern="[0-9]*" maxlength="1" name="otp3" required autocomplete="one-time-code" />
      <input type="text" inputmode="numeric" pattern="[0-9]*" maxlength="1" name="otp4" required autocomplete="one-time-code" />
      <button type="submit" style="flex-basis: 100%; margin-top: 20px;">Verify OTP</button>
    </form>
  </div>

  <div class="footer">
    üìç Locations: Bengaluru, Mysuru, Tumkur<br/>
    üìû Support: 1800-123-456 | ¬© 2025 MySimpleApp
  </div>

  <script>
    const inputs = document.querySelectorAll('form#otp-form input[type="text"]');
    inputs.forEach((input, i) => {
      input.addEventListener('input', () => {
        if (input.value.length === 1 && i < inputs.length - 1) {
          inputs[i + 1].focus();
        }
      });

      input.addEventListener('keydown', e => {
        if (e.key === "Backspace" && input.value === "" && i > 0) {
          inputs[i - 1].focus();
        }
      });
    });

    function validateOtp() {
      let otp = "";
      inputs.forEach(input => otp += input.value);
      if (!/^\d{4}$/.test(otp)) {
        alert("Please enter a valid 4-digit OTP.");
        return false;
      }
      return true;
    }
  </script>

</body>
</html>
